{
  "name": "ralph-dev",
  "version": "0.1.0",
  "description": "CLI tool for Ralph-dev - efficient operations for AI agents",
  "main": "dist/index.js",
  "bin": {
    "ralph-dev": "bin/ralph-dev.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ralph-dev",
    "cli",
    "ai-agent",
    "task-management",
    "multi-language",
    "claude-code",
    "automation",
    "development-tools"
  ],
  "author": "Lukin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mylukin/ralph-dev.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/mylukin/ralph-dev#readme",
  "bugs": {
    "url": "https://github.com/mylukin/ralph-dev/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "yaml": "^2.3.4",
    "fs-extra": "^11.2.0",
    "cli-progress": "^3.12.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
