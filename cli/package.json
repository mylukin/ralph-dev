{
  "name": "ralph-dev",
  "version": "0.4.9",
  "description": "CLI tool for Ralph-dev - efficient operations for AI agents",
  "main": "dist/index.js",
  "bin": {
    "ralph-dev": "bin/ralph-dev.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ralph-dev",
    "cli",
    "ai-agent",
    "task-management",
    "multi-language",
    "claude-code",
    "automation",
    "development-tools"
  ],
  "author": "Lukin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mylukin/ralph-dev.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/mylukin/ralph-dev#readme",
  "bugs": {
    "url": "https://github.com/mylukin/ralph-dev/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "update-notifier": "^7.3.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
